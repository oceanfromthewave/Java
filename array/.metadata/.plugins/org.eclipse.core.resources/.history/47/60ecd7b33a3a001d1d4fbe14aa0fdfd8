package exam01;

public class Sum {
	public void sum(){
        int n = 10;
        sum(n);
	}
    
    public void sum(int n){// 1부터 n 까지의 합 구하기
        int sum = 0;

        for (int i = 1; i <= n; i++) {
            if(i < n)
                System.out.print(i + " + ");
            else
                System.out.print(i);
            sum += i;
        }
        System.out.println(" = " + sum);
    }
  }
	    
	
